<!--mainpage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <!--cool animated logo -->
            <h1 class="masked">NYT Scraping TROLL</h1>
        </div>

    </div>
    <!--after scraping display articles-->
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank" class="third after">{{this.link}}</a>
                    <br><br>
                    <button  type="button" class=" save" id="ghost" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <!--if not scraped go ahead and tell user no articles-->
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>Uh Oh. Looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>
