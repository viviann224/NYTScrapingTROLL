<!--Saved articles and notes-->
<div class="container">

    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1 class="masked"> Saved Articles</h1>
        </div>
    </div>
    <!--handlebars to display all saved notes -->
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-default">
                    <div id="panelhead" class="panel-heading">
                        <h4>{{this.title}}</h4>
                    </div>
                    <div class="panel-body">
                        <p> {{this.summary}}</p>
                        <a href={{this.link}} target="_blank" class="third after">{{this.link}}</a>
                        <br><br>
                        <button type="button" class="addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                        <button type="button" class="delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <!--displays if no saved posts-->
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--displays all the notes on the modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}